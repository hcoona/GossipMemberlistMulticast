<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      internalLogToConsoleError="true">

  <time xsi:type="AccurateUTC" />

  <variable name="layout" value="${date:universalTime=true:format=yyyy-MM-ddTHH\:mm\:ss.fffZ}|${level:uppercase=true}|${logger}|${ndlc}|${message}" />
  <variable name="logDirectory" value="${environment:LOG_DIRS}" />

  <targets async="true">
    <target xsi:type="File"
            name="all-file"
            fileName="${logDirectory}\all.log"
            layout="${layout}"
            encoding="utf-8" />
    <target xsi:type="FilteringWrapper" name="warn-file" condition="level >= LogLevel.WARN">
      <target xsi:type="File"
              fileName="${logDirectory}\warn.log"
              layout="${layout}"
              encoding="utf-8" />
    </target>
    <target xsi:type="ColoredConsole" name="console" layout="${layout}" />
  </targets>

  <rules>
    <!--<logger name="*" minlevel="Info" writeTo="all-file,warn-file" />-->
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>

</nlog>
